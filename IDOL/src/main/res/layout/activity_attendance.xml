<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AttendanceActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="goBack"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/back"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendances"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"
                android:textSize="20dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/time">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_weight="1"
    android:background="@drawable/border5">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:format12Hour="hh:mm:ss a"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:textSize="16sp"
        android:textStyle="bold" />
    <AnalogClock
        android:id="@+id/simpleAnalogClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00047382"
        android:layout_gravity="center"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/btnStart"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/btnEnd"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:background="@drawable/button"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duaration : Not Avaliable"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift Time : 09:00 AM - 06:00 PM"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past Attendence"
        android:layout_margin="25dp"
        android:textSize="14dp"
        android:onClick="onPastAttendence"
        android:textColor="#ffffff"
        android:background="@drawable/border3"/>
</LinearLayout>
    </LinearLayout>
</LinearLayout>